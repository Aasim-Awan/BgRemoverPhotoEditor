<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or transparency -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change to your desired background color -->
        </shape>
    </item>
    <!-- Border definition -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
            android:color="@color/white" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
